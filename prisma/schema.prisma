// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  password      String?   // For simple auth
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  // User-specific data
  learningData  LearningData[]
  generatedContent GeneratedContent[]
}

model LearningData {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Learning analytics
  totalArticles     Int @default(0)
  totalEmails       Int @default(0)
  totalPosts        Int @default(0)
  totalStories      Int @default(0)
  totalScripts      Int @default(0)
  totalProtocols    Int @default(0)
  totalSummaries    Int @default(0)
  totalQuotes       Int @default(0)
  
  // Writing patterns
  preferredTone     String?
  commonTopics      String?  // JSON string of topics
  writingLevel      String?  // beginner, intermediate, advanced
  
  // AI feedback
  lastFeedback      String?
  improvementAreas  String?  // JSON string of areas
  
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

model GeneratedContent {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  type        String   // article, email, post, story, etc.
  title       String?
  content     String
  prompt      String
  wordCount   Int?
  
  // Metadata
  tags        String?  // JSON string of tags
  isPublic    Boolean  @default(false)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Idioms - English to Hebrew translations
model Idiom {
  id          String   @id @default(cuid())
  english     String
  hebrew      String
  category    String   @default("ביטוי")
  learned     Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([english])
  @@index([learned])
}

// Synonyms - Hebrew word alternatives
model Synonym {
  id          String   @id @default(cuid())
  primary     String   // The preferred/correct form
  alternatives String  // JSON array of alternative words
  category    String   @default("general")
  context     String?  // JSON array of contexts
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([primary])
}

// AI Text Corrections - תיקוני טקסטים שנוצרו ע"י AI
model AICorrection {
  id                String   @id @default(cuid())
  userId            String   @default("default-user")
  
  // Original AI-generated text
  originalText      String
  
  // User-corrected text
  correctedText     String
  
  // Detected patterns
  patterns          String?  // JSON array of detected patterns
  
  // Correction metadata
  correctionType    String   @default("manual") // manual, suggested, auto
  category          String?  // type of content (article, email, etc.)
  confidence        Float    @default(1.0)
  
  // Learning data
  forbiddenWords    String?  // JSON array of words to avoid
  preferredWords    String?  // JSON object of word replacements
  
  // Timestamps
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  
  @@index([userId])
  @@index([createdAt])
}

// Translation Patterns - דפוסי תרגום נפוצים שצריך למנוע
model TranslationPattern {
  id                String   @id @default(cuid())
  userId            String   @default("default-user")
  
  // The problematic pattern (e.g., "אני אהבה")
  badPattern        String
  
  // The correct form (e.g., "אני אוהב/ת")
  goodPattern       String
  
  // Context and examples
  context           String?
  examples          String?  // JSON array of examples
  
  // Pattern strength
  occurrences       Int      @default(1)
  confidence        Float    @default(0.5)
  
  // Pattern type
  patternType       String   @default("translation") // translation, grammar, style
  
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  
  @@index([userId])
  @@index([badPattern])
  @@unique([userId, badPattern, goodPattern])
}

// Language learning entries - mapping Hebrew terms to target languages
model LanguageEntry {
  id               String   @id @default(cuid())
  userId           String   @default("default-user")
  hebrewTerm       String
  targetLanguage   String
  translatedTerm   String
  pronunciation    String?
  usageExamples    String?  // JSON array of examples
  notes            String?  // Additional cultural/contextual notes
  extraSuggestions String?  // JSON array of tips or related phrases
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@index([userId])
  @@index([targetLanguage])
}

// Enums for language learning system
enum LanguageLevel {
  BEGINNER
  INTERMEDIATE
  ADVANCED
}

enum LessonStatus {
  NOT_STARTED
  IN_PROGRESS
  COMPLETED
  MASTERED
}

enum ExerciseType {
  MATCHING        // התאמה - מילה בעברית → תרגום
  FILL_BLANK      // מילוי חסר - השלמת משפט
  WORD_ORDER      // סידור מילים - בניית משפט
  LISTENING       // האזנה וזיהוי
}

enum Difficulty {
  EASY
  MEDIUM
  HARD
}

enum PartOfSpeech {
  NOUN
  VERB
  ADJECTIVE
  ADVERB
  PRONOUN
  PREPOSITION
  CONJUNCTION
  ARTICLE
  OTHER
}

enum GrammaticalGender {
  MASCULINE
  FEMININE
  NEUTER
  NONE
}

// Structured language lessons
model Lesson {
  id              String   @id @default(cuid())
  targetLanguage  String   // english, romanian, italian
  level           LanguageLevel
  topic           String   // היכרות, אוכל, עבודה, נסיעות, בית, משפחה
  title           String
  description     String?
  duration        Int      // מספר דקות משוער
  objectives      String?  // JSON array of objectives
  grammarNotes    String?  // Rich text - הסברים דקדוקיים
  culturalTips    String?  // טיפים תרבותיים
  order           Int      // מספר סידורי בתוך הנושא
  isPublished     Boolean  @default(false)
  
  // Relations
  vocabulary      LessonVocabulary[]
  exercises       LessonExercise[]
  prerequisites   Lesson[] @relation("LessonPrerequisites")
  requiredBy      Lesson[] @relation("LessonPrerequisites")
  userProgress    UserLessonProgress[]
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  @@index([targetLanguage, level, topic])
  @@index([isPublished])
  @@unique([targetLanguage, level, topic, order])
}

// Vocabulary items for each lesson
model LessonVocabulary {
  id              String   @id @default(cuid())
  lessonId        String
  lesson          Lesson   @relation(fields: [lessonId], references: [id], onDelete: Cascade)
  
  hebrewTerm      String
  translatedTerm  String
  pronunciation   String?
  audioUrl        String?  // אם נרצה להעלות הקלטות משלנו
  difficulty      Difficulty @default(EASY)
  partOfSpeech    PartOfSpeech?
  gender          GrammaticalGender?
  usageExample    String?  // JSON object with target and hebrew
  notes           String?
  
  order           Int      // סדר הצגה בשיעור
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  @@index([lessonId])
}

// Exercises for lessons
model LessonExercise {
  id              String   @id @default(cuid())
  lessonId        String
  lesson          Lesson   @relation(fields: [lessonId], references: [id], onDelete: Cascade)
  
  type            ExerciseType
  title           String?
  instructions    String   // הוראות לתרגיל
  question        String   // השאלה או הטקסט לתרגיל
  correctAnswer   String?  // תשובה נכונה (אם רלוונטי)
  exerciseData    String?  // JSON - נתונים ספציפיים לתרגיל (מילים, משפטים, וכו')
  points          Int      @default(10) // נקודות לתרגיל
  order           Int      // סדר בתוך השיעור
  
  // Relations
  options         LessonExerciseOption[]
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  @@index([lessonId])
  @@index([type])
}

// Options/answers for exercises
model LessonExerciseOption {
  id              String   @id @default(cuid())
  exerciseId      String
  exercise        LessonExercise @relation(fields: [exerciseId], references: [id], onDelete: Cascade)
  
  text            String   // הטקסט של האפשרות
  isCorrect       Boolean  @default(false)
  explanation     String?  // הסבר אם נכון/לא נכון
  order           Int      // סדר הצגה
  
  createdAt       DateTime @default(now())
  
  @@index([exerciseId])
}

// User progress tracking for lessons
model UserLessonProgress {
  id              String   @id @default(cuid())
  userId          String   @default("default-user")
  lessonId        String
  lesson          Lesson   @relation(fields: [lessonId], references: [id], onDelete: Cascade)
  
  status          LessonStatus @default(NOT_STARTED)
  score           Int?     // ציון אחרון 0-100
  attempts        Int      @default(0)
  completedAt     DateTime?
  lastReviewedAt  DateTime?
  needsReview     Boolean  @default(false)
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  @@unique([userId, lessonId])
  @@index([userId])
  @@index([status])
  @@index([needsReview])
}